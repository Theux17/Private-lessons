
<div class="item">
    <div>Imagem Url</div>

    <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
</div>

<div class="item">
    <div>Nome Completo</div>
    <input type="text" name="name" value="{{teacher.name}}">
</div>

<div class="item">
    <div>Data de nascimento</div>
        <input 
            type="date" 
            name="birth" 
            value="{{ teacher.age }}"
        >
    </div>

<div class="item">
    <div>Grau de escolaridade</div>
    <select name="educational_level">
        <option hidden selected disabled value="">Selecione o seu grau de escolaridade</option>
        
        <option name="medio" value="Ensino Médio Completo" {% if teacher.educational_level == "Ensino Médio Completo" %}
            selected
        {% endif %}>Ensino Médio Completo</option>
        <option name="superior" value="Ensino Superior Completo" {% if teacher.educational_level == "Ensino Superior Completo" %}
            selected
        {% endif %}>Ensino Superior Completo</option>
        <option name="doutorado" value="Doutorado" {% if teacher.educational_level == "Doutorado" %}
            selected
        {% endif %}>Doutorado</option>
        <option name="mestrado" value="Mestrado" {% if teacher.educational_level == "Mestrado"%}
            selected
        {% endif %}>Mestrado</option>
    </select>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <span><input    
            type="radio"    
            name="class_location"   
            value="Presencial"   
            {% if teacher.class_location == "Presencial" %}
                checked
            {% endif %}
        checked>Presencial
    </span>
    <span>
        <input 
            type="radio" 
            name="class_location" 
            value="Distancia"
            {% if teacher.class_location == "À distância" %}
                checked
            {% endif %}
        >À distância
    </span>
</div>

<div class="item">
    <div>Área de atuação</div>
    <input type="text" name="occupation_area" placeholder="Insira a área de atuação" value="{{teacher.occupation_area}}">

</div>

<div class="item">
    <div>Data de cadastro na plataforma</div>
    <div>
        <span>Desde</span>
        <span>{{teacher.created_at}}</span>
    </div>
</div>


