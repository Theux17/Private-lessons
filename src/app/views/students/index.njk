{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">

        <a class="button-register" href="students/create">Cadastro</a>

        <table width="100%">
            <thead>
                <tr>
                    <th>Nome completo</th>
                    <th>Email</th>
                    <th>Ano escolar</th>
                    <th>Professor</th>
                    <th>Ação</th>
                </tr>    
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td>
                        <span style= "background-image: url({{ student.avatar_url }}) "></span>
                        {{ student.name }}
                    </td>
                    <td>{{ student.email }}</td>
                    <td>{{ student.educational_level }}</td>
                    <td>{{ student.teacher_name }}</td>
                    <td><a href="/students/show/{{ student.id }}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}